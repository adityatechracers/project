.nested-row.p-md.wrapper.border-bottom.page-heading.inline-nav-heading.white-bg.m-b-md.m-t-md.overflow-content
  .title-group
    %h1!= t('nav.manage.proposal_templates')
    .title
      = link_to t('nav.manage.proposal_templates'), manage_proposal_templates_path, :class => 'breadcrumb-link'
      %span.breadcrumb-divider /
      = t 'shared.edit'

  = link_to "#", :disable_with => 'Saving...', :class => 'btn btn-success pull-right m-t-xl', :style => "margin-left:10px;", :id => "save-proposal-header-btn" do
    .visible-desktop
      %i.icon-disk{:style => "margin-top:1px;margin-right:4px;"}
      = t 'shared.save'
  - unless @proposal_template.is_upload_your_own?
    = link_to manage_proposal_template_path(@proposal_template), :method => "delete", :class => "btn btn-danger pull-right m-t-xl", :confirm => "Are you sure you want to delete this template?" do
      %span.visible-desktop
        %i.icon-remove-2{:style => "margin-top:1px;margin-right:4px;"}
        = t '.delete_template'
  = link_to edit_contract_manage_proposal_template_path(@proposal_template), :class => 'btn btn-primary pull-right m-t-xl', :style => "margin-right:10px;" do
    %span.visible-desktop
      %i.icon-quill{:style => "margin-top:1px;margin-right:2px;"}
      = t '.edit_contract'
.template-widget{:data => {:template => @proposal_template.id}}
.widget-body
  .row-fluid
    = render :partial => 'manage/proposal_templates/form'
