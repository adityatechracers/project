.ibox.session-form
  .ibox-title
    %h3.title= t('.forgot_password')
  .ibox-content
    = hform_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'form-horizontal', :method => :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, :required => true, :autofocus => true
      .hr-line-dashed
      .form-actions.row
        .col-md-8.col-md-offset-4
          = f.button :submit, "Send me reset password instructions"
      .row.m-t
        .col-md-8.col-md-offset-4
          = render "devise/shared/links"
